@model ViewModel.AuthorViewModels.AuthorViewModel
@{
    ViewBag.Title = "AddAuthor";
}
<style>
    .fa-cloud-upload {
        margin: 10px 23px 8px 25px !important;
    }

    .submitbtn {
        height: auto;
    }

    .togglecheckbox {
        margin-top: 9px;
    }
</style>

@if (ViewBag.Error == true)
{
    <div class="alert divError">
        <span class="closebtn">&times;</span>
        <strong>@ViewBag.ErrorMessage</strong><br />
        @Html.ValidationSummary()
    </div>
}
<main class="main">
    <article class="article">
        <div class="main-bg-2">
            <div class="form-bg">
                <!--Form Header-->
                <div class="main-header">
                    <div class="main-content">
                        <div class="cotnainer">
                            <div class="row">
                                <div class="container-half">
                                    <h1 class="primary-blue">Add New Author</h1>
                                </div>
                                <div class="container-half contenthead-pd">
                                    <div class="right pr-2">
                                        <a href="@Url.Action("Index", "Author")" class="blog-btn">Go back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Form-->
                <div class="admin-form">
                    @using (Html.BeginForm("AddAuthor", "Author", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <!--First Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <label for="">Author Name</label>
                                        @Html.TextBox("Name", null, new { @class = "textbox" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Second Row-->
                        <div class="container">
                            <div class="row">
                                <div class="select-width">
                                    <div class="form-txt">
                                        <label for="">Gender</label>
                                        @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{
                                             new SelectListItem { Text="Female",Value="female"},
                                             new SelectListItem { Text="Male",Value="male"}},
                                             "Select Gender", new { @class = "textbox" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Third Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <label for="">Email Address</label>
                                        @Html.TextBox("Email", null, new { @class = "textbox" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Fourth Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <label for="">Password</label>
                                        @Html.PasswordFor(model => model.Password, new { @class = "textbox" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Fifth Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <label for="">Confirm Password</label>
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "textbox" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Sixth Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <div class="form-txt">
                                            <label for="">Contact</label>
                                            @Html.TextBox("Contact", null, new { @class = "textbox" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Seven Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <div class="form-txt">
                                            <label for="">Country</label>
                                            @Html.TextBox("Country", null, new { @class = "textbox" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Eight Row-->
                        <div class="container">
                            <div class="row">
                                <div class="text-box-width">
                                    <div class="form-txt">
                                        <div class="form-txt">
                                            <label for="">City</label>
                                            @Html.TextBox("City", null, new { @class = "textbox" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Ninth Row-->
                        <div class="container">
                            <div class="row">
                                <div class="container">
                                    <div class="form-txt">
                                        <label for="">Address</label>
                                        @Html.TextArea("Address", null, new { @class = "textarea", @rows = "5", @cols = "20" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Tenth Row-->
                        <div class="container">
                            <div class="row">
                                <div class="container">
                                    <div class="form-txt">
                                        <label for="">Description</label>
                                        @Html.TextArea("Description", null, new { @class = "textarea", @rows = "5", @cols = "20" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Eleven Row-->
                        <div class="container">
                            <div class="row">
                                <div class="container-half">
                                    <div class="form-txt showbtn">
                                        <label for="">Active</label>
                                        <div class="slider-td">
                                            <label class="switch">
                                                @Html.HiddenFor(model => model.Active, new { @id = "IsActive", @class = "hdncheck" })
                                                <input name="Active" id="Active" type="checkbox" value="false">
                                                <div class="slider round togglecheckbox"></div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Twelve Row-->
                        <div class="container">
                            <div class="right">
                                <input type="submit" class="blog-btn submitbtn" title="Create" />
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </article>
</main>
@section scripts{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('.hdncheck').val(false);
        });
        jQuery('#Active').change(function () {
            if (jQuery('#Active').is(":checked")) {
                jQuery('.hdncheck').val(true);
            }
            else {
                jQuery('.hdncheck').val(false);
            }
        });
        jQuery(".closebtn").click(function () {
            jQuery(".divError").fadeOut(1000);
        });
    </script>
}