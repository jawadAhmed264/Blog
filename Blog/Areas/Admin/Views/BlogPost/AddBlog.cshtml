@model ViewModel.AdminViewModels.BlogPostViewModels.AddBlogViewModel

@{
    ViewBag.Title = "AddBlog";
}
<link href="~/Areas/Admin/Content/bootstrap-tagsinput-latest/dist/bootstrap-tagsinput.css" rel="stylesheet" />
<style>
    .bootstrap-tagsinput .tag {
        margin-right: 2px;
        color: white;
        background-color: #2372ea;
        padding: 3px;
        border-radius: 10px;
        font-size: 15px;
    }

    .bootstrap-tagsinput {
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        display: inline-block;
        padding: 4px 6px;
        color: #555;
        vertical-align: middle;
        border-radius: 4px;
        max-width: 100%;
        line-height: 22px;
        cursor: text;
        height: 60px;
        width: 14.3%;
        margin: 14px;
        overflow-x: scroll;
        overflow-y: hidden;
    }

    .info, .success, .warning, .error, .validation {
        border: 1px solid;
        margin: 10px 0px;
        padding: 15px 10px 15px 50px;
        background-repeat: no-repeat;
        background-position: 10px center;
        width: 53%;
        margin: 0 auto;
        border-radius: .3em;
        margin-bottom: 50px;
        position: fixed;
        bottom: 0;
        right: 16px;
        z-index: 1;
        text-align: left;
        display:none;
    }

    .info {
        color: #00529B;
        background-color: #BDE5F8;
        background-image: url('info.png');
    }

    .success {
        color: #4F8A10;
        background-color: #DFF2BF;
        background-image: url('success.png');

    }

    .warning {
        color: #9F6000;
        background-color: #FEEFB3;
        background-image: url('warning.png');
    }

    .error {
        color: #D8000C;
        background-color: #FFBABA;
        background-image: url('error.png');
    }
    .errorMessage {
      color:red;
    }
    .cross {
     position:absolute;
     top: 5px;
     left: 10px;
     cursor:pointer;
    }
</style>

<div class="error"><i class="fa fa-times cross"></i></div>
@Html.ValidationSummary(true, "", new { @class = "error" })

<article class="article">
    <div class="main-bg">
        @using (Html.BeginForm("AddBlog", "BlogPost", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="main-header">
                <div class="main-content">
                    <div class="container">
                        <div class="blog-input">
                            <h1 class="primary-blue">Blog Post</h1>
                            @Html.TextBoxFor(m => m.Title, new { @class = "title-txt", placeholder = "Blog Title" })
                            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "errorMessage" })
                            @Html.TextBoxFor(m => m.Tags, new { @class = "title-txt", @data_role = "tagsinput", @placeholder = "Tags" })
                            @Html.ValidationMessageFor(m => m.Tags,null, new { @class = "error" })
                            @Html.TextAreaFor(m => m.Summary, new { @class = "title-txt", placeholder = "Add summery" })
                            @Html.ValidationMessageFor(m => m.Summary, null, new { @class = "errorMessage" })
                            @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.CategoryList, "CategoryId", "CategoryName"), "Select Category", new { @class = "" })
                            @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "errorMessage" })
                            <label class="custom-file-upload">
                                <input type="file" name="BannerImage" id="BannerImage" />
                                <i class="fa fa-cloud-upload"></i> <span class="coverImg">Upload Backgroung</span>
                            </label>
                            @Html.ValidationMessageFor(m => m.BannerImage, null, new { @class = "errorMessage" })
                        </div>
                        <div class="btns">
                            <button type="submit" name="btnSubmit" value="Publish" class="blog-btn2">Publish</button>
                            <button type="submit" name="btnSubmit" value="Save" class="blog-btn2">Save</button>
                            @*<a href="#" class="blog-btn">Preview</a>*@
                            @Html.ActionLink("Close", "Index", "BlogPost", new { @class= "blog-btn" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="edit-mr">
                @Html.ValidationMessageFor(m => m.Content, null, new { @class = "errorMessage" })
                @Html.TextAreaFor(m => m.Content, new { @class = "mytextarea" })
            </div>

        }
    </div>
</article>

