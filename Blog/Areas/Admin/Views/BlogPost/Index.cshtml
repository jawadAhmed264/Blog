
@{
    ViewBag.Title = "Index";
}

<article class="article">
    <div class="main-bg-2 main-content">
        <!--Header-->
        <div class="mainHeader-2">
            <div class="container">
                <div class="row">
                    <div class="container-half">
                        <h1 class="primary-blue">My Blog</h1>
                    </div>
                    <div class="container-half">
                        <div class="right">
                            <div class="blog-header">
                                <input type="search" placeholder="Search Blog">
                                <a href="addblog.html" class="blog-btn">Add</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Table-->
        <div class="blog-table">
            <div class="container">
                <di class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Blog title</th>
                                <th>Views</th>
                                <th>Comments</th>
                                <th>Category</th>
                                <th>Created on</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="showbtn">
                                <td>
                                    <label class="switch">
                                        <input type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                </td>
                                <td>
                                    <div class="row status">
                                        <img src="images/Avatar-1 1.png" alt="">
                                        <p>Technology  raising up</p>
                                        <label class="active-status"></label>
                                    </div>
                                </td>
                                <td>1099 </td>
                                <td>55</td>
                                <td>Technology</td>
                                <td>24 Nov 2019</td>
                                <td>
                                    <div class="showbtn">
                                        <div class='edit-btn'><div class='edit-icon'> <img src='images/Edit-icon.png' alt=''></div></div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</article>

