@model ViewModel.AuthorViewModels.AuthorViewModel

@{
    ViewBag.Title = "Author Profile";
}

<main class="main">
    <article class="article">
        <div class="main-bg-profile">
            <div class="container">
                <div class="row">
                    <div class="profile-box">
                        <!--Image insert box-->
                        <div class="container profile-img">
                            <div class="row align-center">
                                <div>
                                    <img src="~/Areas/Admin/Content/images/avatar-icon-big.png" alt="">
                                    <label for="img-upload" class="img-upload">
                                        <input type="file" title="Upload" value="Upload" id="img-upload">
                                        <div class="img-upload-btn">
                                            <i class="fas fa-user-edit white-icon"></i>
                                        </div>
                                    </label>
                                </div>
                                <div class="profile-description-box">
                                    <h2>Jose Marlin</h2>
                                    <p>Karachi, Pakistan</p>
                                    <p>Editor</p>
                                </div>
                            </div>
                        </div>

                        <!--Profile Form-->
                        <div class="container">
                            <div class="row">
                                <form action="" class="user-form">
                                    <!--First Row-->
                                    <div class="container">
                                        <div class="row">
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <label for="">Name</label>
                                                    <input type="text" class="textbox">
                                                </div>
                                            </div>
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <label for="">Full name</label>
                                                    <input type="text" class="textbox">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Second Row-->
                                    <div class="container">
                                        <div class="row">
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <label for="">Email</label>
                                                    <input type="text" class="textbox">
                                                </div>
                                            </div>
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <label for="">Mobile number</label>
                                                    <input type="text" class="textbox">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Third Row-->
                                    <div class="container">
                                        <div class="row">
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <div class="form-txt">
                                                        <label for="">Address</label>
                                                        <input type="text" class="textbox">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="container-half">
                                                <div class="form-txt">
                                                    <label for="">Postal</label>
                                                    <input type="text" class="textbox">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Third Row-->
                                    <div class="container">
                                        <div class="row">
                                            <div class="form-txt">
                                                <label for="">About You</label>
                                                <textarea name="" id="" cols="196" rows="10" class="textarea"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <!--Fourth Row-->
                                    <div class="container">
                                        <div class="right">
                                            <a class="blog-btn">Save</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</main>
