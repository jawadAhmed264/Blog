@using Blog.Models
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    @Scripts.Render("~/bundles/modernizr")
    <!--Main CSS-->
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body class="body-bg">
    <main class="main-bg">
        <div class="flex-container">
            <div class="container-half content">
                <h1 class="primary-blue-color logo">Today'sTrending</h1>
                <p>Join TodaysTrending you will get the best  news from around the world</p>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form">
                        <h2>Login</h2>
                        <div class="form-boxes">
                            <div class="form-input">
                                @Html.TextBoxFor(m => m.Email, new { @class = "txtUsername subtext-color" })
                                <span class="subtext-color float-lbl1">Username</span>
                            </div>
                            <div class="form-input">
                                @Html.PasswordFor(m => m.Password, new { @class = "txtPassword subtext-color" })
                                <span class="subtext-color float-lbl2">Password</span>
                            </div>
                            <div class="form-input">
                                @Html.CheckBoxFor(m => m.RememberMe) <label class="subtext-color">Remember me</label>
                            </div>
                            <div class="form-input">
                                <button type="submit" class="login-btn">Login</button>
                            </div>
                            <div class="form-conditions">
                                <p class="subtext-color">By sign in, you agree to Today’sTrending</p>
                                <p class="subtext-color"><a class="primary-blue-color" href="">Term and Conditions</a> & <a class="primary-blue-color" href="">Privacy Policy</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="container-half">
                <img src="~/Content/Blog/images/loginform-bg.png" />
            </div>
        </div>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/js/script.js"></script>
</body>
</html>